    <Grid>
        <ListBox FontSize="25" FontFamily="Rockwell" x:Name="listBoxQuestions" Background="#fcf0bf" HorizontalAlignment="Left" ItemsSource="{Binding Questions}" Height="374" VerticalAlignment="Top" Width="379"
