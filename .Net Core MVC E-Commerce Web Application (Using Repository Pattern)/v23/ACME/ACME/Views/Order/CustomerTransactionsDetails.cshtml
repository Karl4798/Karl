@model ACME.Data.Models.Order

@{
    ViewBag.Title = "Order Details";
}

<h2>@ViewBag.Title</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <h4>Items(s)</h4>
    </div>
    <div class="col-md-2">
        <h4>Quantity</h4>
    </div>
    <div class="col-md-2">
        <h4>Unit Price</h4>
    </div>
</div>
@foreach (var item in Model.OrderLines)
{
    <div class="row">
        <div class="col-md-8">@Html.DisplayFor(pn => item.ProductName)</div>
        <div class="col-md-2">@Html.DisplayFor(q => item.Amount)</div>
        <div class="col-md-2">@Html.DisplayFor(up => item.Price)</div>
    </div>
}
<hr />
<div>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.OrderId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderId)
        </dd>

        <dt>
            Deliver to 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            Address
        </dt>

        <dd>
            @Html.DisplayFor(Model => Model.AddressLine1)<br>
            @Html.DisplayFor(Model => Model.AddressLine2)<br>
            @Html.DisplayFor(Model => Model.Province)<br>
            @Html.DisplayFor(Model => Model.City)<br>
            @Html.DisplayFor(Model => Model.Postcode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderTotal)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderTotal)
        </dd>

        <dt>
            Order Date / Time
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderPlaced)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "CustomerTransactions")
</p>
