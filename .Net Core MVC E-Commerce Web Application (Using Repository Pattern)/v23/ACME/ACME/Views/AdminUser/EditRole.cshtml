@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<h1>Edit User Roles</h1>

<br>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
            <input asp-for="RoleName" disabled class="form-control">
        </div>
    </div>

    <br>
    <h3>Users accounts in this role:</h3>
    <br>

    @if (Model.Users.Any())
    {
        <table class="table">
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>
                            <p>@user</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        <p>No accounts in this role!</p>
                    </td>
                </tr>
            </tbody>
        </table>
    }

    <a asp-action="EditUsersInRole" asp-controller="AdminUser" asp-route-roleId="@Model.Id" class="btn btn-primary" style="width:auto">Add or remove users</a> | <a asp-action="ListRoles" asp-controller="AdminUser" class="btn btn-primary" style="width:auto">Back to list</a>

</form>